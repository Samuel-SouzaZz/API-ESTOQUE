  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.5.7",
    "@types/jest": "^29.5.4",
    "@types/uuid": "^9.0.7",
    "@types/pg": "^8.10.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1"
  }
